#!/usr/bin/env raku

use lib 'lib';  # Add the lib directory to the module search path
use Lain;       # Import the Entry-Module
use Lain::CommandLoader;
use Lain::CommandRegistry;
use Commands::DocCommand;
use Lain::CLI;
use Helpers::Logger;

# Set the log level at initialization
our $log = logger();  # Get the logger instance
$log.log-level = 3;  # Set the log level

# Log some messages
$log.log(1, "This is a low-level log.");
$log.log(4, "This is a high-level log.");  # Won't be printed if log-level is 3

my @args = normalize-args(@*ARGS);

Lain::run-cli(@args);
