#!/usr/bin/env raku

use lib 'lib';  # Add the lib directory to the module search path
use Lain;       # Import the Entry-Module
use Lain::CommandLoader;
use Lain::CommandRegistry;
use Commands::DocCommand;
use Lain::CLI;
use Helpers::Logger;  # Import the logger module, which exports the log function

# Set the log level at initialization
logger().log-level = 3;  # You can still set the log level globally here

# Log some messages
log(1, "This is a low-level log.");
log(4, "This is a high-level log.");  # Won't be printed if log-level is 3

my @args = normalize-args(@*ARGS);

Lain::run-cli(@args);
